<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_input_student_first_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_input_student_last_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Nazwa" />

    <TextView
        android:id="@+id/txt_input_student_last_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_input_student_first_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nazwisko" />

    <ImageButton
        android:id="@+id/button_add_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_baseline_mode_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_input_student_last_name" />


</androidx.constraintlayout.widget.ConstraintLayout>